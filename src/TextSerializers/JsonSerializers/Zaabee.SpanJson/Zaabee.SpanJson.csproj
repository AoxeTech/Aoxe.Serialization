<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>2023.4.1</PackageVersion>
        <Version>2023.4.1</Version>
        <Authors>Mutuduxf</Authors>
        <Company>Mutuduxf</Company>
        <PackageProjectUrl>https://github.com/PicoHex/Zaabee.Serialization</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>The wrappers and extensions methods for SpanJson</Description>
        <PackageTags>Zaabee;Json;SpanJson;serialize;deserialize</PackageTags>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="SpanJson" Version="4.0.1" />
        <PackageReference Include="Zaabee.Extensions" Version="2023.1.2" />
        <PackageReference Include="Zaabee.Serializer.Abstractions" Version="2023.3.0" />
    </ItemGroup>

</Project>
